@model ProductDeleteOverviewModel


<div class="card">
    <h5 class="card-header bg-danger">Delete Confirmation Required</h5>
    <div class="card-body">
        <p>Are you sure that you want to delete this product ?</p>
    </div>
    <div class="card-footer">
    <form asp-controller="Product" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-secondary">No</a>
    </form>

    </div>
</div>