@using ProductionLibrary
@*

*@
@model Production

@Model.ProductionName

@if (Model.Rooms.Count() == 0)
{
    <h3>U have 0 unit in your production</h3>

    <a asp-controller="Room" asp-action="Create" asp-route-productionId="@Model.Id"  class="btn btn-primary">Create your first unit</a>

}
else
{
    foreach (var room in Model.Rooms)
    {
        //Add Rooms
        <table class="table mb-0">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">@room.RoomName (@room.Lots.Count())</th>
                    <th><a asp-controller="Room" asp-action="Delete" asp-route-id="@room.Id" asp-route-prodId="@room.ProductionId" class="btn btn-danger">X</a></th>
                </tr>
            </thead>
        </table>
        if (room.Lots.Count() == 0)
        {
            <table class="table">
                <thead class="bg-danger">
                    <tr>
                        <th>@room.RoomName is empty</th>
                    </tr>
                </thead>
            </table>
        }
        else
        {
            <table class="table table-bordered">
                <thead class="bg-secondary">
                    <tr>
                        <th>Lot Id</th>
                        <th>Product</th>
                        <th>Date</th>
                        <th>Estimation</th>
                        <th>Recolted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lot in room.Lots)
                   {
                       <tr class="bg-primary">
                           <td class="bg-secondary">@lot.Id</td>
                           <td>@lot.ProductName</td>
                           <td>@lot.StartDate</td>
                           <td>@lot.EstimatedQuantitie</td>
                           <td>@lot.RecoltedQuantitie</td>
                       </tr>
                   }
                </tbody>
            </table>
        }
    }


    <a asp-controller="Room" asp-action="Create" asp-route-productionId="@Model.Id"  class="btn btn-primary">Create new unit</a>

}