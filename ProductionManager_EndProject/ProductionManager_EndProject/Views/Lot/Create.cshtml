@model LotCreateOverviewModel

<h1>Lot creation</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Lot" asp-action="Create" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="RoomId">
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ProductionId">
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedQuantitie"></label>
                <input asp-for="EstimatedQuantitie" class="form-control" />
                <span asp-validation-for="EstimatedQuantitie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="labels">Products</label>
                <select asp-for="ProductId" asp-items="Model.Products" class="form-control">
                    <option value="" selected disabled hidden>@Html.Raw((Model.Products.Count() == 0) ? "There is no avaiable products" : "Select Product")</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Production" asp-action="MainPage" asp-route-id="@Model.ProductionId" class="btn btn-danger">Cancel</a>
        </form>

    </div>
</div>
