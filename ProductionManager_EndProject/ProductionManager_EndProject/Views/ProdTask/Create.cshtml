*@
@model ProdTaskCreateOverviewModel

<h1 class="display-4">Create Task</h1>
<form asp-controller="ProdTask" asp-action="Create" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="ProductionId"/>
    </div>

    <div class="form-group">
        <label asp-for="TaskName">Task name</label>
        <input asp-for="TaskName" class="form-control" />
        <span asp-validation-for="TaskName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskDescription">Task Description</label>
        <textarea asp-for="TaskDescription" class="form-control"></textarea>
        <span asp-validation-for="TaskDescription" class="text-danger"></span>
    </div>
    <button type="submit" class="btn-primary btn">Create</button>
    <a asp-controller="Production" asp-action="MainPage" asp-route-id="@Model.ProductionId" class="btn btn-danger">Cancel</a>
</form>
